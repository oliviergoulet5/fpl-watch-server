{
  "name": "fantasy-football-server",
  "version": "1.0.0",
  "description": "Backend for the fantasy-football website",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "dev": "nodemon dist/index.js",
    "start": "node dist/index.js",
    "db:setup": "node ./dist/utils/tests/testConnection.js",
    "test": "npm run db:setup && jest --forceExit --detectOpenHandles",
    "test-log": "test -- --verbose false",
    "migration:create": "mikro-orm migration:create",
    "prettier": "./node_modules/.bin/prettier --write \"src/**/*.{ts,js,css,json,tsx,jsx}\"",
    "precommit": "lint-staged"
  },
  "author": "Olivier Goulet",
  "license": "MIT",
  "dependencies": {
    "@mikro-orm/cli": "^4.4.2",
    "@mikro-orm/core": "^4.4.2",
    "@mikro-orm/migrations": "^4.4.2",
    "@mikro-orm/postgresql": "^4.4.2",
    "@mikro-orm/reflection": "^4.4.2",
    "@types/babel__generator": "^7.6.2",
    "@types/graphql": "^14.5.0",
    "@types/node": "^14.14.25",
    "apollo-datasource-rest": "^0.9.7",
    "apollo-server": "^2.19.2",
    "apollo-server-express": "^2.19.2",
    "argon2": "^0.27.1",
    "aws-sdk": "^2.856.0",
    "connect-pg-simple": "^6.2.1",
    "cors": "^2.8.5",
    "dayjs": "^1.10.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "graphql": "^15.5.0",
    "graphql-upload": "^11.0.0",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1",
    "typescript": "^4.1.3"
  },
  "jest": {
    "roots": [
      "<rootDir>/dist"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      ".d.ts",
      "map.js"
    ],
    "coverageDirectory": "<rootDir>/dist"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  },
  "lint-staged": {
    "*.{ts,js,css,json,tsx,jsx}": [
      "./node_modules/.bin/prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "printWidth": 80
  },
  "devDependencies": {
    "@types/connect-pg-simple": "^4.2.2",
    "@types/express": "^4.17.11",
    "@types/express-session": "^1.17.3",
    "@types/faker": "^5.1.7",
    "@types/graphql-upload": "^8.0.4",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@types/pg": "^7.14.9",
    "faker": "^5.4.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.3",
    "ts-node": "^9.1.1"
  }
}
